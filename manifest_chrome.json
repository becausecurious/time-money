{
  "manifest_version": 3,
  "name": "Time = Money",
  "description": "Replace all prices with the time you need to work to earn that much. Find real value of stuff you buy!",
  "version": "0.0.0.1",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "glue.js",
        "options_util.js",
        "script.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "128": "icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}